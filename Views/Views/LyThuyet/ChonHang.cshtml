<style>
    .btn-group-lg {
        flex: 1; 
        margin: 5px;
    }
</style>
<h1>CHỌN HẠNG THI</h1>
<div class="d-flex flex-wrap justify-content-center">
    @foreach (Hang h in Model)
    {
        <a style="min-width:250px; width:100%; max-width:400px; text-transform:uppercase; font-size:1.5em;" class="btn btn-danger m-2" asp-action="ChonHangThi" asp-route-id="@h.IdHang">
            <p>@h.Thongtin</p>
            <p class="additional-info">@h.Thongtinchitiet</p>
            <p class="additional-info">@h.Diemtoitheu/@h.Diemtoida</p>
        </a>

    }
</div>


